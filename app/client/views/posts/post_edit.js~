	}
});

Template.postEdit.events({
    'submit form': function(e) {
        e.preventDefault();

console.log(mytag.getSelected());

        var currentPostId = this._id;
        var postProperties = {
            title: $(e.target).find('[name=title]').val(),
            message: $(e.target).find('[name=message]').val(),
            tags: mytag.getSelected()
        }

        Posts.update(currentPostId, {$set: postProperties}, function(error) {
            if (error) {
                //display the error to the user
                Errors.throw(error.reason);
            } else {
                Router.go('postPage', {_id: currentPostId});
            }
        });
    },

    'click .delete': function(e) {
        e.preventDefault();
        if (confirm("Delete this post?")) {
            var currentPostId = this._id;
            Posts.remove(currentPostId);
            Router.go('home');
        }
    },	"click .edit_sumit_tag" :function() {
	
	 if (mytag !== null && !mytag.initOn()){
	  // this is how you sta
                    mytag.construct({data: tags.c, initData: this.tags}); //
                    }
				

                tagin = mytag.focusTags({});
                console.log(tagin);
				


  				$(document).click(function() {
  				
                	console.log($(tagin).is(":focus"));
                	
                	if($(tagin).is(":focus")){
                	
                		$(".edit_sumit_tag").addClass("sumit_tag_focus");
                		
            		}else{
            		
                  		$(".edit_sumit_tag").removeClass("sumit_tag_focus");  
                  		
                	}
            	});
            
            

            }
});
